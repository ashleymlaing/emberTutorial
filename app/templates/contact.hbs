<!-- {{outlet}} -->
<h1>Contact Page</h1>
<div class="text-center">
  <h1>{{headerMessage}}</h1>

  <br/><br/>

  <p>Send a message</p>

  <div class="form-horizontal form-group form-group-lg row">
    <div class="col-xs-10 col-sm-6 col-md-5 col-xs-offset-1">
      {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
    </div>
    <div class="col-xs-10 col-xs-offset-1">
      {{textarea value=message class="form-control" placeholder="Write your message." autofocus="autofocus"}}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-md-3">
      <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'sendEmail'}}>Send Message</button>
    </div>
  </div>

  {{#if responseMessage}}
     <div class="alert alert-success">{{responseMessage}}</div>
   {{/if}}

  <br/><br/>
</div>
